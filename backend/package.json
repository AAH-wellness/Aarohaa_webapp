{
  "name": "aarohaa-backend",
  "version": "1.0.0",
  "description": "Aarohaa Wellness Backend - Microservices Architecture",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "npm run dev:auth",
    "dev:auth": "cd authentication && npm run dev",
    "stop:auth": "cd authentication && npm run stop",
    "dev:all": "npm-run-all --parallel dev:auth dev:appointment dev:provider dev:payment dev:admin dev:notification dev:analytics",
    "install:all": "npm install && cd authentication && npm install",
    "start": "npm run start:auth",
    "start:auth": "cd authentication && npm start"
  },
  "keywords": [
    "microservices",
    "wellness",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
